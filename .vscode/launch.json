{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Makefile Project",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/minishell", // Path to the compiled executable
            "args": ["file1.txt" "wc -w" "wc -w" "file2.txt"],  // Command-line arguments if any
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",  // or "lldb" for LLDB
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",  // This will trigger the "build" task before starting the debug session
            "miDebuggerPath": "/usr/bin/gdb",  // Path to the GDB debugger
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}